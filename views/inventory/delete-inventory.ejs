<%# Content Heading %>
<% if (title) { %>
    <h1 id="login-header">
    <%= title %>
    </h1>
<% } else { res.redirect('/') } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
    </ul>
    <% } %>

<form action="/inv/delete/" method="post" class="add-inventory">
    <p class="required">Warning: Deleting this vehicle is a permanent action that cannot be undone.</p>
    <label for="inv_make">Make:</label>
    <input type="text" id="inv_make" name="inv_make" readonly value="<%= locals.inv_make %>">

    <label for="inv_model">Model:</label>
    <input type="text" id="inv_model" name="inv_model" readonly value="<%= locals.inv_model %>">

    <label for="inv_year">Year:</label>
    <input type="text" id="inv_year" name="inv_year" readonly value="<%= locals.inv_year %>" pattern="^[0-9]{4}$">

    <label for="inv_price">Price:</label>
    <p class="required">(Do not include $ or commas)</p>
    <input type="text" id="inv_price" name="inv_price" readonly value="<%= locals.inv_price %>" pattern="^\d{1,9}$">

    <input type="submit" value="Delete Vehicle" id="login-button">

    <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
</form>