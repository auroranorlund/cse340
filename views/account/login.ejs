<%# Content Heading %>
<% if (title) { %>
    <h1 id="login-header">
    <%= title %>
    </h1>
<% } else { res.redirect('/') } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
    </ul>
    <% } %>

<form action="/account/login" method="post" class="login">
    <label for="account_email">Email:</label>
    <input type="email" id="account_email" name="account_email" required value="<%= locals.account_email %>">
    <label for="account_password">Password:</label>
    <input type="password" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    <input type="submit" value="Login" id="login-button">
    <p>No account? <a href="/account/registration">Sign Up</a></p>
</form>